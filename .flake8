[flake8]
# Exclude some common directories and files
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .eggs,
    *.egg-info,
    .tox,
    .mypy_cache,
    .pytest_cache
    profile_converter

# Set the maximum allowed line length
max-line-length = 96

# Enable or disable specific warnings
# E501: Line too long (handled by max-line-length)
# W503: Line break occurred before a binary operator
# E203:  Whitespace before ':'
# E226: missing whitespace around arithmetic operator
ignore = E501, W503, E203, E226

# Enable specific warnings
select = 
    E,F,W,C,I,B,B950

# Enable plugins (if any are installed)
# Example: flake8-bugbear, flake8-comprehensions
enable-extensions = G

# Enable flake8-black plugin
plugin_black = True

# Additional configuration options
max-complexity = 18
